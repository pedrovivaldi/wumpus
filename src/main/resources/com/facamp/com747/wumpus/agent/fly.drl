function boolean adjacent(Dungeon l1, Dungeon l2) {
	if (l1.x == l2.x)
		return Math.abs(Math.abs(l1.y - l2.y)-1)<0.001;
	if (l1.y == l2.y)
		return Math.abs(Math.abs(l1.x - l2.x)-1)<0.001;
	return false;
}

