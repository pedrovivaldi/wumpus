rule wumpus_is_dead 
		salience 100
	when
		$s : Dungeon(perceptStench==State.YES)
		$r : Dungeon(wumpus == State.DEAD, adjacent($s,$r))
	then
		Agent.logger.info("Rule fired ["+drools.getRule().getName()+"] = ["+$s.x+","+$s.y+"("+$s.id+")]->["+$r.x+","+$r.y+"("+$r.id+")]");
		modify($s) { setPerceptStench(State.NO) };
	end;


