		salience 90
	when
		$c : Cave()
		$a : Agent(alive, y+1<=$c.maxCoordinateVertical)
		$d : Dungeon(x == $a.x, y == $a.y)
		not (exists Dungeon(x == $d.x, y==$d.y+1))
	then
		Agent.logger.info("Rule fired ["+drools.getRule().getName()+"]");
		Dungeon x = new Dungeon($d.x, $d.y+1);
		$c.addDungeon(x);
		insert(x);
	end;
