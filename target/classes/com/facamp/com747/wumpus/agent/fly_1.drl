rule check_maybe_pit
    salience 30
    when
        $a : Agent(alive, hasRock)
        $tp : TravelPlan()
        $d : Dungeon(x == $a.x, y == $a.y)
        $d_pit : Dungeon(pit == State.MAYBE, adjacent($d_pit, $d))
        $m : Move(toX == $d_pit.x, toY == $d_pit.y, fromT == $a.t)
        not (exists Throw(fromT == $a.t))
    then
        Throw t = new Throw($d.x,$d.y,$d_pit.x,$d_pit.y,$a.t,$a.t+1);
        Agent.logger.info("Inserting throw rock="+t.toString());
        insert(t);

        Agent.logger.info("Retracting move="+$m.toString());
        retract($m);

        Agent.logger.info("Reseting tp="+$tp.toString());
        retract($tp);
        TravelPlan tplan = new TravelPlan();
        insert(tplan);
    end;

rule get_rock
    when
        $a : Agent(alive)
        $d : Dungeon (x == $a.x, y == $a.y, rock == State.YES)
        $op: Percept(t == $a.t)
    then
        Agent.logger.info("Rule fired ["+drools.getRule().getName()+"] to ["+$d.x+","+$d.y+"]");
        try {
            retract($op);        
            Percept p = $a.grabRock();
            modify($a) {setHasRock(true)};
            modify($d) {setRock(State.NO)};
            Agent.logger.info("Result="+p.toString());
            insert(p);	
	} catch (Exception ex) {
            $a.logger.error("ERROR", ex);
            insert(ex);
	}
    end;



