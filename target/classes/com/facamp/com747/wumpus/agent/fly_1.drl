rule free_of_pit //"~percept_pit(s) & adjacent(s,r) => no_pit(r)"
	when
		$s : Dungeon(perceptBreeze == State.NO)
		$r : Dungeon(pit == State.UNKNOWN || pit == State.MAYBE, adjacent($s,$r))
	then
