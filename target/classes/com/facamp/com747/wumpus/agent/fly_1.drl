rule confirm_pit
        when
                $x : Dungeon(pit == State.MAYBE)
                $y : Dungeon(perceptBreeze == State.YES, adjacent($x,$y))
                $list : List(size == 4) from collect ($w : Dungeon(adjacent($w, $y)))
                not (exists $z : Dungeon(adjacent($z, $y), pit == State.YES, $z.x != $x.x, $z.y != $x.y))    
        then
                modify($x){ setPit(State.YES)}
                Agent.logger.info("Rule fired ["+drools.getRule().getName()+"] = ["+$x.x+","+$x.y+"("+$x.id+",MAYBE)]->["+$x.x+","+$x.y+"("+$x.id+","+$x.pit+")]");
        end;

rule no_pit
    when
        $x : Dungeon(pit != State.NO)
        $y : Dungeon(perceptBreeze == State.NO, adjacent($x, $y))
    then
        Agent.logger.info("Rule fired ["+drools.getRule().getName()+"] = ["+$x.x+","+$x.y+"("+$x.id+",MAYBE)]->["+$x.x+","+$x.y+"("+$x.id+","+$x.pit+")]");
        modify ($x) {setPit(State.NO)};
    end;   

